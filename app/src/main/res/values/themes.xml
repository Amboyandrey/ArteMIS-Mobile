<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_arteMIS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">#555555</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/pastel_red</item>
        <item name="colorOnTertiary">@color/green</item>
        <item name="colorSurface">#EAEAEA</item>
        <item name="colorAccent">@color/dark_red</item>
        <item name="colorOnContainer">#E6E6E6</item>
        <item name="colorOnSecondaryContainer">#F7F7F7</item>
        <item name="colorOnSurface">#303030</item>
        <item name="colorOnTertiaryContainer">#CCCCCC</item>
        <item name="colorOnErrorContainer">#EDEDED</item>
        <!-- Customize your statusbar here. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">#EEEEEE</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <!-- Enable night mode support -->
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">true</item>
    </style>
</resources>